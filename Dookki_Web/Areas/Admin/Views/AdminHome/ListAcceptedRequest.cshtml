<table class="table" border="1">

    <tr>
        <th style="width: 100px;">Tên yêu cầu</th>
        <th style="width: 100px; text-align: right">Thời gian</th>
        <th style="width: 200px;"></th>
    </tr>

    @for (int i = 0; i < 10; i++)
    {
        <tr>
            <td>
                @Html.Label("Vương " + i)
            </td>
            <td style="text-align:right">
                @i

            </td>
            <td style="text-align:right">
                <button type="button" class="btn btn-danger" onclick="window.location.href='@Url.Action("DeleteRequest", "AdminHome", new { id = @ViewBag.idAccept })'">
                    Xóa yêu cầu
                </button>
            </td>
        </tr>
    }
</table>